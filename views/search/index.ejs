<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1 class="mb-4">All Entries</h1>
        <a href="/entries/new" class="btn btn-success">New Entry</a>
      </div>

      <% name.forEach(article => { %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%= article.institution %></h4>
          <div class="card-subtitle text-muted mb-2"><%= article.field %></div>
          <div class="card-text mb-2"><%= article.description %></div>
          <a href="entries/<%= article.slug %>" class="btn btn-primary"
            >Read More</a
          >
          <a href="entries/edit/<%= article.id %>" class="btn btn-info">Edit</a>
          <form
            action="/entries/<%= article.id %>?_method=DELETE"
            method="POST"
            class="d-inline"
          >
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
